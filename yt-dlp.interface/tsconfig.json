{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "ui/**/*",
    "**/*.tsx",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "electron"
  ]
}
